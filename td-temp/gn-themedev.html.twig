{% extends '@nucleus/partials/particle.html.twig' %}

{% set page = uri.param('nccdev') %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="gantry-theme://themedev/css/theme-dev.css" />
{% endblock %}
{% block javascript_footer %}
    <script src="{{ url('user://neocatema/js/ncc-doc.js') }}"></script>
    <script src="{{ url('gantry-theme://themedev/js/theme-dev.js') }}"></script>
{% endblock %}

{% if particle.use_content %}
	{% block particle %}
		{% include '@particles/gn-themedev/content.html.twig' %}
	{% endblock %}
{% endif %}

{% pageblock body_bottom %}
	{% include '@particles/gn-themedev/vars.html.twig' %}
	{% include '@particles/gn-themedev/color-chart.html.twig' %}
	{% include '@particles/gn-themedev/inputs.html.twig' %}
	{% if page %}
		{% include '@particles/gn-themedev/'~page~'.html.twig' %}
	{% endif %}
{% endpageblock %}
