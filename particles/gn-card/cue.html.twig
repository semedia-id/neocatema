{% if particle.link %}
	{% set link_prefix	= "<a href='"~particle.link|raw~"'>" %}
	{% set link_suffix	= "</a>" %}
{% else %}
	{% set link_prefix	= "" %}
	{% set link_suffix	= "" %}
{% endif %}

{{ link_prefix|raw }}

<div class='content'
	{% if particle.image %}style="background-image: url('{{ url(particle.image) }}')"{% endif %} >

<div class='overlay'>

<div class='normal'>
	{% if particle.headline %}
		<div class='h2 headline'>{{ particle.headline|raw }}</div>
	{% endif %}
	{% if particle.description %}
		<div class="description">{{ particle.description|raw }}</div>
	{% endif %}
</div>

<div class='hover'>
	{% if particle.items|length >0 %}
		<ul class='items'>
		{% for item in particle.items %}
			<li class="item">
			{% if item.title %}
				<div class='h4'>{{ item.title|raw }}</div>
			{% endif %}
			{% if item.text %}
				<div class='text'>{{ item.text|raw }}</div>
			{% endif %}
			</li>
		{% endfor %}
		</ul>
	{% endif %}
</div>

</div>	
</div>

{{ link_suffix|raw }}
